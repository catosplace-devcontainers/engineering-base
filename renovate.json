{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "helpers:pinGitHubActionDigests"
  ],
  "baseBranches": ["main"],
  "regexManagers": [
    {
      "fileMatch": ["devcontainer.json"],
      "matchStrings": [
        "\"ghcr\\.io/devcontainers/features/node:(?<currentValue>[\\d\\.]+)\"",
        "\"version\": \"(?<version>[\\d\\.]+)\"",
        "\"nvmVersion\": \"(?<nvmVersion>[\\d\\.]+)\""
      ],
      "depNameTemplate": "devcontainer feature - node",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}
